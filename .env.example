# OneQlick Partner App - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# API Configuration
# ============================================
EXPO_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1

# For production, use your deployed backend URL:
# EXPO_PUBLIC_API_BASE_URL=https://api.oneqlick.com/api/v1

# ============================================
# Google OAuth 2.0 Client IDs
# ============================================

# Web Client ID (Create in Google Cloud Console)
# Steps:
# 1. Go to https://console.cloud.google.com/apis/credentials
# 2. Create OAuth 2.0 Client ID → Web application
# 3. Name: OneQlick Partner Web Client
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=

# Android Client ID (Create in Google Cloud Console)
# Steps:
# 1. Go to https://console.cloud.google.com/apis/credentials
# 2. Create OAuth 2.0 Client ID → Android
# 3. Package name: com.oneqlick.partner
# 4. Get SHA-1: Run "cd android && .\gradlew signingReport"
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=

# iOS Client ID (Create in Google Cloud Console)
# Steps:
# 1. Go to https://console.cloud.google.com/apis/credentials
# 2. Create OAuth 2.0 Client ID → iOS
# 3. Bundle ID: com.oneqlick.partner
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=

# ============================================
# Feature Flags
# ============================================
EXPO_PUBLIC_ENABLE_GOOGLE_SIGNIN=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# ============================================
# App Configuration
# ============================================
EXPO_PUBLIC_APP_NAME=OneQlick Partner
EXPO_PUBLIC_APP_VERSION=1.0.0

# ============================================
# Debug Configuration
# ============================================
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_MOCK_API=false
